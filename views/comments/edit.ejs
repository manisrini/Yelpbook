<%- include("../partials/header.ejs") %>
<link rel="stylesheet" href="/stylesheet/star.css">
<div class="container">
	<form style="width : 30%; margin : 30px auto;" action="/books/<%= book_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">

	<div>
		<h1>Edit comment </h1>	
	</div>
	
	<fieldset class="starability-basic">
	  <!-- <legend>Review</legend> -->
	  <input type="radio" id="no-rate" class="input-no-rate" name="comment[rating]" value="0" checked aria-label="No rating." />
	  <input type="radio" required  id="first-rate1" name="comment[rating]" value="1" />
	  <label for="first-rate1" title="Terrible">1 star</label>
	  <input type="radio" id="first-rate2" name="comment[rating]" value="2" />
	  <label for="first-rate2" title="Not good">2 stars</label>
	  <input type="radio" id="first-rate3" name="comment[rating]" value="3" />
	  <label for="first-rate3" title="Average">3 stars</label>
	  <input type="radio" id="first-rate4" name="comment[rating]" value="4" />
	  <label for="first-rate4" title="Very good">4 stars</label>
	  <input type="radio" id="first-rate5" name="comment[rating]" value="5" />
	  <label for="first-rate5" title="Amazing">5 stars</label>
	</fieldset>	
	
	<div class="form-group">
		<input class="form-control" required type="text" name="comment[text]" value="<%=comment.text%>">	
	</div>
	
	
	
	<div class="form-group"> 
		<button class="btn btn-primary btn-lg btn-block">Submit</button>	
	</div>
	
	<a href="/books">Go Back</a>
</form>
	
</div>


<%- include("../partials/footer.ejs") %>