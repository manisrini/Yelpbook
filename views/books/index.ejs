<%- include("../partials/header.ejs") %>
<div class="container">
	<header style="margin-top : 20px ;" class="jumbotron">
		<div class="container">
			<h1><i class="fas fa-book-reader"></i> Welcome to Yelpbook!!!</h1>
			<p>Make your own views</p>
			<a href="/books/new" class="btn btn-primary btn-lg">Add new books</a>	
		</div>
		
	</header>	
	
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<%books.forEach(function(book){%>

		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<div class="image">
					<img style="height : 300px" src="<%= book.image %> ">	
				</div>
				
				<div class="caption">
					<h3><%= book.name %></h3>	
				</div>
				<a class="btn btn-primary" href="/books/<%=book._id%>">More info</a>
			</div>
			
			
		</div>
		
	
		<% })%>
	</div>
	
</div>


<%- include("../partials/footer.ejs") %>