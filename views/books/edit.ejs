<%- include("../partials/header.ejs") %>

<div class="container">
	<form style="width : 30%; margin : 30px auto;" action="/books/<%= book._id %>?_method=PUT" method="POST">

	<div>
		<h1>Edit <%= book.name %></h1>	
	</div>
	
	<div class="form-group">
		<input class="form-control" required type="text" name="book[name]" value="<%=book.name %>">	
	</div>
	
	<div class="form-group">
		<input class="form-control" required type="text" name="book[image]" value="<%=book.image %>">	
	</div>
	
	<div class="form-group">
		<input class="form-control" required type="text" name="book[desc]" value="<%=book.description %>">	
	</div>	
		
	<div class="form-group">
		<input class="form-control" required type="text" name="book[price]" value="<%=book.price %>">	
	</div>
		
	<div class="form-group">
		<input class="form-control" required type="text" name="book[genre]" value="<%=book.genre%>">	
	</div>	
	
	<div class="form-group"> 
		<button class="btn btn-primary btn-lg btn-block">Submit</button>	
	</div>
	
	<a href="/books">Go Back</a>
</form>
	
</div>


<%- include("../partials/footer.ejs") %>